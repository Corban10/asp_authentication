@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.roles;
}

@using taohi_backend.Models
@model UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h1>Edit User</h1>
    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="Id" class="col-form-label"></label><br />
            <div>
                <input asp-for="Id" class="form-control" readonly>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="col-form-label"></label><br />
            <div>
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label><br />
            <div>
                <input asp-for="Email" class="form-control" readonly>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayName" class="col-form-label"></label><br />
            <div>
                <input asp-for="DisplayName" class="form-control">
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-form-label"></label><br />
            <div>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-form-label"></label><br />
            <div>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="col-form-label"></label><br />
            <div>
                <input asp-for="DateOfBirth" class="form-control">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserType" class="col-form-label"></label>
            <select asp-for="UserType" default="@Model.UserType" class="form-control" default="">
                @foreach (var role in roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActive">
            <label class="form-check-label" asp-for="IsActive" for="IsActive"></label>
        </div>
        <div class="mt-3 form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Update User
                </button>
                <a asp-action="Index" class="btn btn-primary" style="width:auto">
                    Cancel
                </a>
            </div>
        </div>
    </form>

    <div class="card mb-3">
        <div class="card-header">
            User Roles
        </div>
        <div class="card-body">
            @if (Model.Roles == null || !Model.Roles.Any())
            {
                <h5>None at the moment</h5>
            }
            else
            {

                @foreach (var role in Model.Roles)
                {
                    <h5>@role</h5>
                }
            }
        </div>
        <!--
        <div class="card-footer">
            <a asp-action="ListRoles" class="btn btn-primary">Manage Roles</a>
        </div>
        -->
    </div>

    <div class="card mb-3">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @if (Model.Claims == null || !Model.Claims.Any())
            {
                <h5>None at the moment</h5>
            }
            else
            {

                @foreach (var claim in Model.Claims)
                {
                    <h5>@claim.Type: @claim.Value</h5>
                }
            }
        </div>
        <!--
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Manage Claims</a>
        </div>
        -->
    </div>
</div>