@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container">
        <h2 class="mt-2">Messages</h2>
        <div class="row">&nbsp;</div>
        <div class="row mt-2">
            <div class="col-2">Sender: </div>
            <div class="col-4"><input class="form-control" type="text" id="senderInput" /></div>
        </div>
        <div class="row mt-2">
            <div class="col-2">Receiver: </div>
            <div class="col-4"><input class="form-control" type="text" id="receiverInput" /></div>
        </div>
        <div class="row mt-2">
            <div class="col-2">Message</div>
            <div class="col-4"><input class="form-control" type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input class="btn btn-primary" type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul class="list-group" id="messagesList">
                @foreach (var message in ViewBag.Messages)
                {
                    <li id=@message.MessageId type="hidden" class="list-group-item">
                        <span>
                            @message.SenderView.DisplayName says @message.MessageContent
                        </span>
                        <button id="deleteButton" type="button" class="close">
                            <span>&times;</span>
                        </button>
                    </li>
                }
            </ul>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/axios.min.js"></script>
</div>
