@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using taohi_backend.Models
@model EditRoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h1>Edit Role</h1>
    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="Id" class="col-form-label"></label><br />
            <div>
                <input asp-for="Id" class="form-control" placeholder="Name" disabled>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoleName" class="col-form-label"></label><br />
            <div>
                <input asp-for="RoleName" class="form-control" placeholder="Name">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Update Role
                </button>
                <a asp-action="ListRoles" class="btn btn-primary" style="width:auto">
                    Cancel
                </a>
            </div>
        </div>
    </form>

    <div class="card mb-3">
        <div class="card-header">
            Users in this role
        </div>
        <div class="card-body">
            @if (Model.Users == null || Model.Users.Count <= 0)
            {
                <p>None at the moment</p>
            }
            else
            {
                @foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserRole" asp-route-id="@Model.Id" class="btn btn-primary">Add Or Remove Users</a>
        </div>
    </div>
</div>