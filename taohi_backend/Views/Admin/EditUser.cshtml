@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using taohi_backend.Models
@model UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h1>Edit User</h1>
    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="Id" class="col-form-label"></label><br />
            <div>
                <input asp-for="Id" class="form-control" placeholder="Name" disabled>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label><br />
            <div>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label><br />
            <div>
                <input asp-for="Email" class="form-control" placeholder="Name">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Update User
                </button>
                <a asp-action="Index" class="btn btn-primary" style="width:auto">
                    Cancel
                </a>
            </div>
        </div>
    </form>

    <div class="card mb-3">
        <div class="card-header">
            User Roles
        </div>
        <div class="card-body">
            @if (Model.Roles == null || !Model.Roles.Any())
            {
                <h5>None at the moment</h5>
            }
            else
            {

                @foreach (var role in Model.Roles)
                {
                    <h5>@role</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a asp-action="ListRoles" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @if (Model.Claims == null || !Model.Claims.Any())
            {
                <h5>None at the moment</h5>
            }
            else
            {

                @foreach (var claim in Model.Claims)
                {
                    <h5>@claim.Type: @claim.Value</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Manage Claims</a>
        </div>
    </div>
</div>