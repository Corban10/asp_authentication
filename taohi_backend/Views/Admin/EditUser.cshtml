@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using taohi_backend.Models
@model UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h1>Edit User</h1>
    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group">
            <label asp-for="Id" class="col-form-label"></label><br />
            <div>
                <input asp-for="Id" class="form-control" placeholder="Name" disabled>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label><br />
            <div>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label><br />
            <div>
                <input asp-for="Email" class="form-control" placeholder="Name" disabled>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Update User
                </button>
                <a asp-action="Index" class="btn btn-primary" style="width:auto">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>