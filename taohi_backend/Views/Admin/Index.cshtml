@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    @using taohi_backend.Models;
    @model IEnumerable<User>
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    @if (Model.Any())
    {
        <div class="container">
            <h1>Users</h1>
            <hr />
            <a asp-action="Register" class="btn btn-primary" style="width:auto;">
                Create New User
            </a>
            <hr />
            @foreach (var user in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        User Id: @user.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@user.UserName</h5>
                        <p class="card-title">@user.Email</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
}
